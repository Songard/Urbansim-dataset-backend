# Google Drive API Configuration
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_TOKEN_FILE=token.json

# Monitored folder ID from Google Drive URL
# Example: https://drive.google.com/drive/folders/1ABC123DEF456GHI789JKL
# The folder ID would be: 1ABC123DEF456GHI789JKL
MONITORED_FOLDER_ID=your_folder_id_here

# Monitoring settings
POLLING_INTERVAL=60

# Download settings
DOWNLOAD_DIRECTORY=./downloads

# File processing settings
SUPPORTED_FILE_TYPES=pdf,docx,txt,jpg,png
MAX_FILE_SIZE_MB=100

# Logging
LOG_LEVEL=INFO